<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:background="#ECEFF1"
    android:elevation="4dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/leagueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="@color/themeMainColorDarkBlue"/>

    <TextView
        android:id="@+id/dateEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/themeMainColorDarkBlue"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:id="@+id/homeAwayLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/leagueTextView"
        android:layout_marginTop="5dp"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/homeEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/themeMainColorDarkBlue"/>

            <TextView
                android:id="@+id/awayEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/themeMainColorDarkBlue"/>


        </LinearLayout>

        <TextView
            android:id="@+id/predictionEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/themeMainColorDarkBlue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeAwayLinearLayout"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/oddTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/themeMainColorDarkBlue"/>

        <TextView
            android:id="@+id/oddEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/themeMainColorDarkBlue"
            />
    </LinearLayout>
</RelativeLayout>